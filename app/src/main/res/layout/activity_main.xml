<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="35dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewParah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00673AB7"
        android:text="Parah"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_parah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Parah"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewSurah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00673AB7"
        android:text="Surah"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_surah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Surah"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Search" />

    <Button
        android:id="@+id/btn_translation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="view translation" />

    <Button
        android:text="Respository Link"
        android:id="@+id/git_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:text="Add data"
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:textSize="32sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>